# ===========================================
# Clone Digital Twitter - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit the .env file to version control

# ---------- Database ----------
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/twitterclone
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=twitterclone

# ---------- Redis ----------
REDIS_URL=redis://localhost:6379/0

# ---------- JWT Auth ----------
JWT_SECRET=change-me-to-a-random-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---------- Claude API ----------
CLAUDE_API_KEY=sk-ant-xxxxx

# ---------- Twitter OAuth 2.0 ----------
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TWITTER_CALLBACK_URL=http://localhost:8000/api/v1/accounts/callback

# ---------- Telegram Bot (Notifications) ----------
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# ---------- Encryption ----------
ENCRYPTION_KEY=change-me-to-a-32-byte-key-here!

# ---------- App Settings ----------
APP_NAME=Clone Digital Twitter
APP_ENV=development
DEBUG=true
API_HOST=0.0.0.0
API_PORT=8000
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000

# ---------- Celery ----------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
